<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/circularHeadLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heading Loading..."
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:fontFamily="@font/poppins_medium"
            android:textColor="@color/textPrimary"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/circularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            app:lineHeight="26sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/lorem"
            android:layout_below="@id/circularHeadLine"
            app:fontFamily="@font/karla"
            android:textColor="@color/textSecondary"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_below="@id/circularText"
            android:text="1 hr ago"
            android:layout_marginTop="16dp"
            app:fontFamily="@font/karla"
            android:textColor="@color/stroke"/>

    </RelativeLayout>

</RelativeLayout>